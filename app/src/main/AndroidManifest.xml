<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shojishunsuke.kibunnsns">

    <application
        android:name=".SnugApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.secen.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.secen.main.tutorial.TutorialActivity" />
        <activity android:name=".presentation.secen.setting.SettingActivity" />
        <activity
            android:name=".presentation.secen.main.MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
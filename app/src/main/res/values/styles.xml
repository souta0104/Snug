<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <post name="colorPrimary">@color/colorPrimary</post>
        <post name="colorPrimaryDark">@color/colorPrimaryDark</post>
        <post name="colorAccent">@color/colorAccent</post>
    </style>


    <style name="darkAccent" parent="ThemeOverlay.AppCompat.Light">
        <post name="colorAccent">@color/dark_54</post>
    </style>

    <style name="PostAlertDialog" parent="Theme.AppCompat.Dialog">
        <post name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</post>
        <post name="android:windowMinWidthMinor">@dimen/dialog_min_width_minor</post>
    </style>

    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <post name="android:windowMinWidthMajor">0%</post>
        <post name="android:windowMinWidthMinor">0%</post>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="4dp"
            android:minHeight="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/sentiScoreTextView"
                android:textColor="@color/dark_54"
                android:textSize="16dp"
                android:gravity="center"
                android:text="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/contentTextView"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="64dp"
                android:layout_height="48dp"/>

        <TextView
                android:id="@+id/dateTextView"
                android:textSize="12dp"
                android:text="昨日"
                app:layout_constraintStart_toStartOf="@id/sentiScoreTextView"
                app:layout_constraintEnd_toEndOf="@id/sentiScoreTextView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/dark_26"
                android:layout_width="wrap_content"
                android:layout_height="24dp"/>

        <TextView
                android:id="@+id/contentTextView"
                android:textSize="16dp"
                android:layout_marginHorizontal="4dp"
                android:text="content"
                android:textColor="@color/dark_87"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/dateTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/sentiScoreTextView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"/>
        <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content" android:id="@+id/barrier2"
                                                  app:barrierDirection="left"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>